include ../container/container
include ../logo/logo
include ../social/social
include ../h3/h3
include ../subscribe-form/subscribe-form

//-
  options.menuItems = массив элементов меню

mixin footer(options={})
  if !options.menuItems
    - options.menuItems = []

  footer.footer
    +container()
      section.footer__content
        section.footer__info
          .footer__logo 
            +logo()
          .footer__info-text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»

        section.footer__menu 
          each column in options.menuItems
            section.footer__menu-column
              .footer__column-title
                +h3({text: column.title})
              ul.footer__menu-list
                each name in column.items
                  li.footer__menu-item 
                    a.footer__menu-link(href="/mock-address/change-me")= name

        section.footer__subscribe
          .footer__column-title
            +h3({text: 'Подписка'})
          .footer__subscribe-text Получайте специальные предложения и новости сервиса
          .footer__subscribe-form 
            +subscribe-form()


    section.footer__bottom
      +container()
        .footer__bottom-content
          .footer__copyright Copyright © 2018 Toxin отель. Все права защищены.
          .footer__social 
            +social()