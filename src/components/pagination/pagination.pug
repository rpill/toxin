mixin pagination()
  .pagination
    ul.pagination__list
      li.pagination__item
        button.pagination__button.pagination__button_type_prev.pagination__button_disabled(type="button")
      li.pagination__item
        a.pagination__link.pagination__link_current(href="") 1
      li.pagination__item
        a.pagination__link(href="") 2
      li.pagination__item
        a.pagination__link(href="") 3
      li.pagination__item
        a.pagination__link(href="") ...
      li.pagination__item
        a.pagination__link(href="") 15
      li.pagination__item
        button.pagination__button.pagination__button_type_next(type="button")
    
    .pagination__count 1 – 12 из 100+ вариантов аренды