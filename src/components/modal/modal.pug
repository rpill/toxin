include ../h1/h1

//-
  options.title = заголовок

mixin modal(options={})
  - const slots = {}
            
    mixin slot(key)
      - slots[key] = block

  block

  .modal 
    .modal__header
      if options.title
        .modal__title 
          +h1({text: options.title})
      if slots["header"]
        - slots["header"]()
    if slots["body"]
      .modal__body
        - slots["body"]()
    if slots["footer"]
      .modal__footer
        - slots["footer"]()