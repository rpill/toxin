//-
  options.name = имя инпута
  options.value = значение
  options.checked = true/false checked
  options.text = текст

mixin radio(options={})
  label.radio
    input.radio__input(
      type="radio"
      name=options.name
      value=options.value
      checked=options.checked
    )
    .radio__container 
      .radio__circle
      .radio__body 
        .radio__text= options.text
