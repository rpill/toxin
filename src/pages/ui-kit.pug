extends ../pug/base

include ../components/ui-kit/ui-kit
include ../components/h1/h1
include ../components/h2/h2
include ../components/h3/h3

include ../components/input-field/input-field
include ../components/date-dropdown/date-dropdown
include ../components/subscribe-form/subscribe-form
include ../components/checkbox-list/checkbox-list
include ../components/radio-group/radio-group
include ../components/toggle/toggle
include ../components/like-button/like-button
include ../components/rate-button/rate-button
include ../components/range/range
include ../components/button/button
include ../components/link/link
include ../components/pagination/pagination
include ../components/dropdown/dropdown
include ../components/bullet-list/bullet-list
include ../components/amenities/amenities
include ../components/comment/comment
include ../components/collapse/collapse

include ../components/sign-up/sign-up
include ../components/sign-in/sign-in
include ../components/card/card

block title
  | UI Kit

block main
  - 
    const colors = [
      {
        name: 'Dark Shade 100%',
        color: '#1f2041',
        hex: '#1f2041'
      },
      {
        name: 'Dark Shade 75%',
        color: 'rgba(31, 32, 65, 0.75)',
        hex: '#1f2041'
      },
      {
        name: 'Dark Shade 50%',
        color: 'rgba(31, 32, 65, 0.5)',
        hex: '#1f2041'
      },
      {
        name: 'Dark Shade 25%',
        color: 'rgba(31, 32, 65, 0.25)',
        hex: '#1f2041'
      },
      {
        name: 'Dark Shade 5%',
        color: 'rgba(31, 32, 65, 0.05)',
        hex: '#1f2041'
      },
      {
        name: 'Purple',
        color: '#bc9cff',
        hex: '#bc9cff'
      },
      {
        name: 'Green',
        color: '#6fcf97',
        hex: '#6fcf97'
      },
    ]

    const checkboxItems = [
      {
        text: 'Можно курить',
        name: 'smoke',
      },
      {
        text: 'Можно с питомцами',
        name: 'pets',
        checked: true,
      },
      {
        text: 'Можно пригласить гостей (до 10 человек)',
        name: 'guests',
        checked: true
      },
    ]

    const richCheckboxItems = [
      {
        label: 'Широкий коридор',
        text: 'Ширина коридоров в номере не менее 91 см.',
        name: 'width',
      },
      {
        label: 'Помощник для инвалидов',
        text: 'На 1 этаже вас встретит специалист  и проводит до номера.',
        name: 'help',
      },
    ]

    const radioItems = {
      name: 'sex',
      items: [
        {
          value: 'man',
          checked: true,
          text: 'Мужчина'
        },
        {
          value: 'woman',
          text: 'Женщина'
        }
      ]
    }

    const list = [
      'Нельзя с питомцами',
      'Без вечеринок и мероприятий',
      'Время прибытия — после 13:00, а выезд до 12:00'
    ]

    const amenitiesItems = [
      {
        icon: 'comfort.svg',
        title: 'Комфорт',
        text: 'Шумопоглощающие стены'
      },
      {
        icon: 'location.svg',
        title: 'Удобство',
        text: 'Окно в каждой из спален'
      },
      {
        icon: 'cosiness.svg',
        title: 'Уют',
        text: 'Номер оснащён камином'
      }
    ]

  +ui-kit()
    +ui-kit_page('Colors & Type')
      +ui-kit_section()
        +ui-kit_container()
          +ui-kit_column()
            each color in colors 
              +ui-kit_item({mb: 20})
                +ui-kit_color(color)

          +ui-kit_column()
            +ui-kit_item({mb: 50})
              +ui-kit_typography({name: 'H1', fz: 24, lh: 29, mw: '370px'})
                +h1({text: 'This one is the sub-section or widget title'})
            +ui-kit_item({mb: 50})
              +ui-kit_typography({name: 'H2', fz: 19, lh: 23, mw: '315px'})
                +h2({text: 'Next one is the item title inside widgets'})
            +ui-kit_item({mb: 50})
              +ui-kit_typography({name: 'H3', fz: 12, lh: 15})
                +h3({text: 'This is a label or CTA text'})
            +ui-kit_item({mb: 50})
              +ui-kit_typography({name: 'Body', fz: 14, lh: 24, mw: '305px'})
                div 
                  | This is the body text which is used for most 
                  | of the design, like paragraphs, lists, etc.

    +ui-kit_page('Form Elements')
      +ui-kit_section()
        +ui-kit_container()
          +ui-kit_column({mw: '320px'})
            +ui-kit_item({mb: 20})
              +input-field({
                id: 't-email',
                label: {
                  text: 'Text Field'
                },
                input: {
                  name: 'email',
                  type: 'text',
                  placeholder: 'Email'
                }
              })
            +ui-kit_item({mb: 20})
              +dropdown({
                items: [
                  {name: 'Взрослые', id: 'adults'},
                  {name: 'Дети', id: 'children'},
                  {name: 'Младенцы', id: 'babies'}
                ],
                hasButtons: true,
                dropdownOptions: {
                  defaultText: 'Сколько гостей',
                  plural: ['гость', 'гостя', 'гостей']
                }
              })
            +ui-kit_item({mb: 20})
              +input-field({
                id: 'bd',
                label: {
                  text: 'Masked text field'
                },
                input: {
                  name: 'dates',
                  type: 'text',
                  placeholder: 'ДД.ММ.ГГГГ',
                  mask: '99.99.9999'
                }
              })
            +ui-kit_item({mb: 20})
              +date-dropdown({
                type: 'single'
              })
            +ui-kit_item({mb: 20})
              +date-dropdown({
                type: 'double'
              })
            +ui-kit_item({mb: 20})
              +subscribe-form

          +ui-kit_column({mw: '260px'})
            +ui-kit_item({mb: 20})
              +checkbox-list(checkboxItems)
            +ui-kit_item({mb: 20})
              +radio-group(radioItems)
            +ui-kit_item({mb: 20})
              +toggle({
                name: 'spec',
                text: 'Получать спецпредложения',
              })
            +ui-kit_item({mb: 20})
              +like-button({
                count: 2
              })
            +ui-kit_item({mb: 20})
              +like-button({
                activated: true,
                count: 12
              })
            +ui-kit_item({mb: 20})
              +rate-button({
                name: 'rating',
                rating: 4
              })

          +ui-kit_column({mw: '320px'})
            +ui-kit_item({mb: 20})
              +range({
                title: 'Range Slider',
                sliderOptions: {
                  range: {
                    min: 0,
                    max: 20000
                  },
                  start: [5000, 10000]
                }
              })
            +ui-kit_item({mb: 20})
              +button({
                text: 'Click me'
              })
            +ui-kit_item({mb: 20})
              +button({
                text: 'Click me', 
                modifiers: {view: 'bordered'}
              })
            +ui-kit_item({mb: 20})
              +link({
                text: 'Click me'
              })
            +ui-kit_item({mb: 20})
              +button({
                text: 'Перейти к оплате', 
                modifiers: {width: 'full', icon: 'arrow-forward'}
              })
            +ui-kit_item({mb: 20})
              +pagination()

      +ui-kit_section()
        +ui-kit_container()
          +ui-kit_column({mw: '260px'})
            +dropdown({
              items: [
                {name: 'Спальни', id: 'bedrooms'},
                {name: 'Кровати', id: 'beds'},
                {name: 'Ванные комнаты', id: 'bathrooms'}
              ],
              dropdownOptions: {
                defaultText: 'Количество удобств',
                plural: {
                  bedrooms: ['спальня', 'спальни', 'спален'],
                  beds: ['кровать', 'кровати', 'кроватей'],
                  bathrooms: ['ванная комната', 'ванные комната', 'ванных комнат'],
                }
              }
            })

          +ui-kit_column({mw: '320px'})
            +dropdown({
              items: [
                {name: 'Взрослые', id: 'adults'},
                {name: 'Дети', id: 'children'},
                {name: 'Младенцы', id: 'babies'}
              ],
              hasButtons: true,
              dropdownOptions: {
                defaultText: 'Сколько гостей',
                plural: ['гость', 'гостя', 'гостей']
              }
            })

      +ui-kit_section()
        +ui-kit_container()
          +ui-kit_column({mw: '260px'})
              +collapse({
                title: 'expandable checkbox list',
                expanded: true
              })
                +checkbox-list(checkboxItems)

          +ui-kit_column({mw: '260px'})
            +checkbox-list(richCheckboxItems)

          +ui-kit_column({mw: '260px'})
            +bullet-list()
              each item in list 
                +bullet-list_item()
                  | #{item}

      +ui-kit_section()
        +ui-kit_container() 
          +ui-kit_column({mw: '290px'})   
            +amenities({items: amenitiesItems})
            
          +ui-kit_column({mw: '700px'}) 
            +comment({
              image: 'avatar-man.png',
              name: 'Мурад Сарафанов',
              date: '5 дней назад',
              likes: {
                activated: true,
                count: 12
              },
              text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
            })

    +ui-kit_page('Cards')
      +ui-kit_section()
        +ui-kit_container()
          +ui-kit_column({mw: '380px'})
            +ui-kit_item()
              +sign-up()

          +ui-kit_column({mw: '380px'})
            +ui-kit_item()
              +sign-in()

          +ui-kit_column({mw: '270px'})
            +ui-kit_item({mb: 40})
              +card({
                images: [1, 3, 4, 5],
                number: 888,
                isLuxe: true,
                price: '9 900',
                rating: 5,
                reviewsCount: 145
              })
            +ui-kit_item()
              +card({
                images: [2, 7, 8, 12],
                number: 840,
                price: '9 900',
                rating: 4,
                reviewsCount: 65
              })


            